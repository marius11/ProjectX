@{Layout = null;}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Items</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="~/Scripts/Custom/uics.js"></script>
    <link rel="stylesheet" href="~/Content/Custom/uicc.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</head>
<body>
    <div id="message">
        <div id="error-message" class="alert alert-danger" hidden>
            <span class="glyphicon glyphicon-exclamation-sign"></span> An unexpected error occured. Please try again.
        </div>
        <div id="success-message" class="alert alert-success" hidden>
            <span class="glyphicon glyphicon-exclamation-sign"></span> Your item has been successfully added!
        </div>
    </div>
    <div class="container">
        <button type="submit" id="btn-load-items" class="btn btn-default"><i></i> Load items</button>
        <table id="table-items" class="table table-hover" hidden>
            <caption>Your basic list of items</caption>
            <thead>
                <tr><th>#</th><th>Text</th></tr>
            </thead>
            <tbody></tbody>
        </table>
        <div id="hide-add-button" hidden>
            <button type="button" id="btn-show-form" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span></button>
        </div>
        <form id="add-task-form" class="form">
            <div class="form-group">
                <textarea class="form-control" rows="3" placeholder="Enter your text here"></textarea><br />
                <button id="btn-add-item" type="submit" class="btn btn-primary"><i></i> Submit</button>
                <button id="btn-cancel-form" type="button" class="btn btn-default">Cancel</button>
            </div>
        </form>
    </div>
</body>
</html>
